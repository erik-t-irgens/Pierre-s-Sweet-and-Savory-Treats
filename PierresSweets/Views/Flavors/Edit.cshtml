@{
  Layout = "_Layout";
}

@model PierresSweets.Models.Flavor
<div class="card-header">
    <h4>Edit this flavor: @Html.DisplayFor(model => model.Name)</h4>
</div>

<div class="card-body">
    @using (Html.BeginForm())
    {

        @Html.HiddenFor(model => model.FlavorId)

        @Html.LabelFor(model => model.Name)
        @Html.TextBoxFor(model => model.Name)

        @Html.LabelFor(model => model.Description)
        @Html.TextBoxFor(model => model.Description)

        <input type="submit" value="Save" class="btn btn-outline-success"/>
    }
</div>
<div class="card-footer">
    <p>@Html.ActionLink("Show all flavors", "Index")</p>    
    <a class="btn btn-outline-info" href="/">Home</a>                                            
</div>