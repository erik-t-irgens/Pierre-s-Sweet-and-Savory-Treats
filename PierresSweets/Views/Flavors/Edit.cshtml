@{
  Layout = "_Layout";
}

@model PierresSweets.Models.Flavor
<div class="card-header">
    <h4>Edit this flavor: @Html.DisplayFor(model => model.Name)</h4>
</div>

<div class="card-body">
    @using (Html.BeginForm())
    {

        @Html.HiddenFor(model => model.FlavorId)

        @Html.LabelFor(model => model.Name)<br>
        @Html.TextBoxFor(model => model.Name)<hr>

        @Html.LabelFor(model => model.Description)<br>
        @Html.TextBoxFor(model => model.Description)<hr>

        <input type="submit" value="Save" class="btn btn-outline-success"/>
    }
</div>
<div class="card-footer">
    <a class="btn btn-outline-info" href="/">Home</a>         
    <a class="btn btn-outline-secondary" href="/Flavors">Back to flavors</a>                                   
</div>