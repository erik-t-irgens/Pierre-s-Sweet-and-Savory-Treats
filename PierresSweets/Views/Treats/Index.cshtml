@{
  Layout = "_Layout";
}

@using PierresSweets.Models;
@using System.Security.Claims;
@model List<PierresSweets.Models.Treat>;

<div class="card-header">
    <h2>Here is a list of your treats, @User.Identity.Name</h2>
</div>


@if (Model.Any())
{
    <div class="card-body">
        
        @foreach (Treat treat in Model)
        {
            <p class="alert alert-info treatListed">@Html.ActionLink($"{treat.Name}", "Details", new { id = treat.TreatId})</p class="alert alert-info">
        }
        
    </div>
} 
else
{
    <div class="card-body">
        <h3>No treats have been added yet!</h3>
    </div>
}

<div class="card-footer">
<a class="btn btn-outline-success" href="Treats/Create">Add Treat</a> 
<a class="btn btn-outline-info" href="/">Home</a>  
</div>